<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ttc.project.stoku">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_square"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_circle"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan">

        </activity>
        <activity android:name=".activity.ManageCategoryActivity">
        </activity>
        <activity
            android:name=".activity.AddEditCategoryActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name=".activity.AddEditItemActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name=".activity.DetailReportActivity">
        </activity>
        <activity
            android:name=".activity.ShoppingListActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"
            android:noHistory="true">
        </activity>
        <activity
            android:name=".activity.AfterShoppingActivity"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".activity.ReportDetailActivity">
        </activity>
        <activity android:name=".activity.PromoListActivity">
        </activity>
        <activity
            android:name=".activity.CatalogDetailActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".activity.AboutActivity">
        </activity>
        <activity android:name=".activity.SettingActivity">
        </activity>
        <activity android:name=".activity.FirstActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <meta-data android:name="android.app.shortcuts"
                       android:resource="@xml/shortcuts" />
        </activity>
    </application>

</manifest>